{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build FlexiOffice Debug",
			"type": "shell",
			"command": "./gradlew",
			"args": [
				"assembleDebug",
				"--no-build-cache",
				"--refresh-dependencies"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}